{
  "name": "ruaphone",
  "version": "1.0.0",
  "description": "一个基于 Alpine.js 实现的AI角色扮演-手机模拟器，小手机。",
  "main": "debug.js",
  "scripts": {
    "dev": "python3 -m http.server 8080",
    "build": "node build.js",
    "preview": "cd dist && python3 -m http.server 8080",
    "deploy": "npm run build && wrangler pages deploy dist",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "version:patch": "node update-version.js patch",
    "version:minor": "node update-version.js minor",
    "version:major": "node update-version.js major",
    "release": "npm run version:patch && git add . && git commit -m \"release: v$(node -e 'console.log(require(\\\"./update-version.js\\\").getCurrentVersion())')\" && git push"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "playwright": "^1.54.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "html-minifier-terser": "^7.2.0",
    "clean-css": "^5.3.2",
    "terser": "^5.19.4"
  },
  "directories": {
    "test": "tests"
  }
}
